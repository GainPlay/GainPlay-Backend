{
  "name": "gainplay-backend",
  "version": "1.1.2",
  "description": "",
  "author": "",
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "environment": "development"
  },
  "scripts": {
    "runtime-check": "bun tools/runtime-check-script.ts",
    "preinstall": "bun runtime-check",
    "postinstall": "prisma generate",
    "prestart": "bun runtime-check && bun migrate deploy && bun database/seeders/index.ts",
    "start": "NODE_ENV=$npm_package_config_environment bun x nest start --watch",
    "start:prod": "bun dist/main.js",
    "prestart:prod": "prisma migrate deploy",
    "prebuild": "bun runtime-check",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint . --ignore-pattern 'dist/*' --ignore-pattern '@generated/*'",
    "lint:report": "eslint --output-file eslint_report.json --format json .",
    "premigrate": "bun --env-file=src/config/env/.env.$npm_package_config_environment tools/transfer-db-connection.ts",
    "migrate": "prisma migrate",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "6.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint-plugin-perfectionist": "^4.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bun": "latest",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.5.0",
    "prettier": "^3.3.3",
    "prisma": "6.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.6.0"
  },
  "prisma": {
    "schema": "database/prisma/schema.prisma"
  },
  "engines": {
    "bun": ">=1.1.40"
  },
  "module": "index.ts"
}
